<div class="card mb-4" style="width: 75%;">
  <div class="card-body">
    <h3 class="card-title"><%= @spending.amount %></h3>
    <h5 class="card-subtitle text-secondary mb-4">category: <%= @spending.category.heading %></h5>
    <p class="card-text"><%= @spending.description %></p>
  </div>
</div>
<div class="d-flex">
  <%= link_to I18n.t('general.back'), user_spendings_path(current_user), class: 'btn btn-secondary', style: "margin-right: 5px;"  %>
  <%= link_to I18n.t('spending.links.edit'), edit_user_spending_path(current_user, @spending), class: 'btn btn-outline-primary', style: "margin-right: 5px;" %>
  <%= button_to I18n.t('spending.links.destroy'), user_spending_path(current_user, @spending), method: :delete, class: 'btn btn-outline-danger' %>
</div>
