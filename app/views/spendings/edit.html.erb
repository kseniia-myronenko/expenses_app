<h1 class="text-secondary mb-4"><%= I18n.t('spending.edit.title') %></h1>
<%= link_to I18n.t('general.back'), user_spending_path(current_user, @spending), class: 'btn btn-secondary mb-4' %>

<div class="col-6">
  <%= form_with(model: @spending, url: user_spending_path(current_user, @spending)) do |f| %>
    <div class="form-group mb-2">
      <%= f.number_field :amount, placeholder: 'Enter amount', class: 'form-control', min: 0 %>
    </div>

    <div class="form-group mb-2">
      <%= f.text_area :description, placeholder: 'Enter description', class: 'form-control', rows: 5 %>
    </div>

    <div class="form-group mb-2">
    <p class="text-secondary">Select category:</p>
      <%= f.select :category_id, options_for_select(@categories), {}, { class: 'form-control', id: 'exampleFormControlSelect1' } %>
    </div>

    <div class='d-flex'>
      <%= f.submit 'Update spending', class: "btn btn-primary", style: "margin-right: 5px;" %>
    </div>
  <% end %>
</div>
