<div class="row justify-content-center p-3 mb-2 bg-light shadow pt-5">
  <div class="col-6">
    <h1 class="text-secondary"><%= I18n.t('authentication.form.title') %></h1>
    <p class="font-weight-bold"><%= I18n.t('authentication.form.subtitle') %>:</p>

    <%= form_for @user do |f| %>
      <div class="form-group mb-2">
        <%= f.text_field :username, placeholder: 'Username', class: 'form-control' %>
      </div>

      <div class="form-group mb-2">
        <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
      </div>

      <div class="form-group mb-2">
        <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', class: 'form-control' %>
      </div>

      <%= f.submit 'Create an account', class: "btn btn-primary" %>
      <p><%= I18n.t('authentication.form.have_an_account') %> <%= link_to I18n.t('authentication.form.log_in'), login_path %></p>
    <% end %>
  </div>
</div>
