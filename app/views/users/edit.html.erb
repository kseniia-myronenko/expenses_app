<h1><%= I18n.t('user.edit.title') %></h1>

<%= form_for @user, method: 'PATCH' do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit 'Update an account', class: "btn btn-primary" %>
<% end %>
